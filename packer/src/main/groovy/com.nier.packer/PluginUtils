package com.nier.packer

import com.android.build.gradle.api.BaseVariant
import com.android.projectmodel.Variant
import org.gradle.api.Action
import org.gradle.api.Project


//interface GroovyIterator<T> {
//    void iterate(T t)
//}

class PluginUtils {
    static void iterateVariant(Project project, Closure iterator) {
        project.android.applicationVariants.all { BaseVariant variant ->
            iterator(variant)
        }

    }

    static void iterateVariant(Project project, Action<? extends Variant> action) {
        project.android.applicationVariants.all { BaseVariant variant ->
            action.execute(variant)
        }

    }
}